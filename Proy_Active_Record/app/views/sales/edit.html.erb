<div class="container" align="center" style="width: 500px">
<div class="panel panel-default" align="left" >
	<div class="panel-heading" bgcolor="#f5f5f"><label class="titulo">Edit Sale Detail</label></div>
	<div class="panel-body">
		<br>
<%= form_for @sale,url:{action: "update",:id => @sale.id} do |f|%>
<p><label>Client</label>:
<%= collection_select(:sale,:client_id,@clients,:id,:last_name ) %></p>
<p><label>Product</label>:
<%= collection_select(:sale,:product_id,@products,:id,:name) %></p>
<p><label>Vendor name</label>:
<%= f.text_field:vendor_name %></p>
<p><label>Number of items</label><br/>
<%= f.text_field:items_number %></p>
<%= f.submit class:"btn btn-primary"%>
<% end %>
</div>
</div>
<p align="center"></p><%= link_to 'Back', {:action => 'list' },class:"btn btn-primary" %></p>
</div>


