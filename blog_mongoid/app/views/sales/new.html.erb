<div class="container" align="center" style="width: 500px">
<div class="panel panel-default" align="left" >
	<div class="panel-heading" bgcolor="#f5f5f"><label class="titulo">Add new Sale</label></div>
	<div class="panel-body">
		<br>
<%= form_for @sale,url: {action: "create"}, html: { class: "form-group"} do |f|%>
<p><label>Client</label>:
<%= collection_select(:sale,:client_id,@clients,:id,:last_name,html_options ={:class=>'form-control'} ) %></p>
<p><label>Product</label>:
<%= collection_select(:sale,:product_id,@products,:id,:name,html_options ={:class=>'from-control'}) %></p>
<p><label>Vendor name</label>:
<%= f.text_field:vendor_name, :class => "form-control"%></p>
<p><label>Number of items</label><br/>
<%= f.text_field:items_number , :class => "form-control"%></p>
<%= f.submit class:"btn btn-primary" %>
<% end %>
</div>
</div>
</div>
